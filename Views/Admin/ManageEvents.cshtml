@model IEnumerable<BookM.Models.Event>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="display-4 border-bottom border-light text-white">Manage Events</h2>
        <a asp-action="CreateEvent" class="btn btn-success">+ Add Event</a>
    </div>

    <table class="table table-hover border">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.EventDate.ToString("d")</td>
                    <td>
                        <span class="badge bg-secondary">@item.Category?.Name</span>
                    </td>
                    <td>
                        <a asp-action="EditEvent" asp-route-id="@item.EventId" class="btn btn-sm btn-warning">Edit</a>

                        <a asp-action="ManageTickets" asp-route-eventId="@item.EventId" class="btn btn-sm btn-info">Tickets</a>

                        <a asp-action="DeleteEvent" asp-route-id="@item.EventId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>