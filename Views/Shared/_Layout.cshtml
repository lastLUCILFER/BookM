<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookM</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookM.styles.css" asp-append-version="true" />

    <style>
        body {
            /* Background image with overlay */
            background: linear-gradient(135deg, rgba(10, 10, 10, 0.8), rgba(40, 10, 60, 0.8)), url('https://images.unsplash.com/photo-1459749411175-04bf5292ceea?q=80&w=1170&auto=format&fit=crop');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-glass fixed-top mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-ticket-perforated-fill text-primary"></i> BookM
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Categories
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark glass-card border-0" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="AllEvents" asp-route-category="Cinema">Cinema</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="AllEvents" asp-route-category="Concert">Concert</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="AllEvents" asp-route-category="Sport">Sport</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="AllEvents" asp-route-category="Theater">Theater</a></li>
                                <li><hr class="dropdown-divider bg-light opacity-25"></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="AllEvents">View All</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AllEvents">Events</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-danger fw-bold" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark glass-card border-0" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                                    <li><hr class="dropdown-divider bg-light opacity-25"></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="ManageEvents">Manage Events</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="ManageCategories">Manage Categories</a></li>
                                </ul>
                            </li>
                        }
                    </ul>



                    <form class="d-flex me-3" asp-controller="Home" asp-action="AllEvents" method="get">
                        <input class="form-control me-2" type="search" placeholder="Search events..." name="searchString" aria-label="Search" style="width: 200px;">
                        <button class="btn btn-outline-glass" type="submit"><i class="bi bi-search"></i></button>
                    </form>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link">Hello, @User.Identity.Name!</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger fw-bold" asp-controller="Account" asp-action="Logout">Log Out</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary-glass btn-sm ms-2" asp-controller="Account" asp-action="Login">Log In</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1" style="margin-top: 80px;">
        <main role="main" class="pb-3 fade-in-up">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted mt-auto">
        <div class="container">
            &copy; 2025 - BookM - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white-50 text-decoration-none">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>