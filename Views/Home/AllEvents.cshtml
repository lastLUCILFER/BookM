@model IEnumerable<BookM.Models.Event>

@{
    ViewData["Title"] = "All Events";
}

<div class="container">
    <h2 class="mb-4 border-bottom pb-2">Upcoming Events</h2>

    
    @if (Model != null && Model.Any())
    {
        
        <div class="row row-cols-1 row-cols-md-3 g-4">

            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm position-relative">

                        @if (item.Category != null)
                        {
                            <span class="badge bg-primary position-absolute top-0 end-0 m-2 shadow">
                                @item.Category.Name
                            </span>
                        }

                        <a asp-controller="Home" asp-action="EventDetails" asp-route-id="@item.EventId">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <img src="https://dummyimage.com/600x400/000/fff&text=@item.Title" class="card-img-top" alt="@item.Title">
                            }
                        </a>

                        <div class="card-body">
                            <h5 class="card-title">
                                <a asp-controller="Home" asp-action="EventDetails" asp-route-id="@item.EventId" class="text-decoration-none text-dark">
                                    @item.Title
                                </a>
                            </h5>

                            <p class="card-text text-muted mb-1">
                                <i class="bi bi-geo-alt-fill text-danger"></i> @item.Location
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="bi bi-calendar-event"></i>
                                    @item.EventDate.ToString("MMM dd, yyyy • HH:mm")
                                </small>
                            </p>
                        </div>

                        <div class="card-footer bg-white border-top-0">
                            <div class="d-grid gap-2">
                                <a asp-controller="Home" asp-action="EventDetails" asp-route-id="@item.EventId" class="btn btn-outline-danger">
                                    Book Now
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div> @* End of div class="row" *@
    }
    else
    {
        
        <div class="alert alert-info text-center mt-4">
            <h4>No events found!</h4>
            <p>Check back later for upcoming concerts and matches.</p>
        </div>
    }
</div>