@{
    ViewData["Title"] = "Home Page";
    var sliderEvents = ViewBag.SliderEvents as IEnumerable<BookM.Models.Event>;
    var upcomingEvents = ViewBag.UpcomingEvents as IEnumerable<BookM.Models.Event>;
}

<div id="eventCarousel" class="carousel slide mb-5 shadow-lg rounded-4 overflow-hidden" data-bs-ride="carousel">

    <div class="carousel-indicators">
        @for (int i = 0; i < sliderEvents.Count(); i++)
        {
            <button type="button" data-bs-target="#eventCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="true"></button>
        }
    </div>

    <div class="carousel-inner" style="max-height: 600px;">
        @{
            int index = 0;
        }
        @foreach (var item in sliderEvents)
        {
            <div class="carousel-item @(index == 0 ? "active" : "")">
                <div style="position:relative;">
                    <img src="@item.ImageUrl" class="d-block w-100" style="object-fit: cover; height: 600px; filter: brightness(60%);" alt="@item.Title">
                    <div class="carousel-caption d-none d-md-block text-start p-5 glass-panel" style="bottom: 50px; left: 10%; right: 10%; max-width: 800px; margin: 0 auto; border-radius: 20px;">
                        <span class="badge bg-primary mb-2 shadow-sm">@item.Category?.Name</span>
                        <h1 class="display-3 fw-bold text-white mb-3" style="text-shadow: 0 2px 10px rgba(0,0,0,0.5);">@item.Title</h1>
                        <p class="lead text-white mb-4">
                            <i class="bi bi-calendar-event me-2"></i>@item.EventDate.ToString("f")
                            <span class="mx-2">•</span>
                            <i class="bi bi-geo-alt-fill me-2"></i>@item.Location
                        </p>
                        <a asp-controller="Home" asp-action="EventDetails" asp-route-id="@item.EventId" class="btn btn-primary-glass btn-lg fw-bold">
                            Book Now <i class="bi bi-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
            index++;
        }
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#eventCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#eventCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="container mb-5">

    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom border-light pb-2 glass-panel p-3">
        <h2 class="text-white m-0"><i class="bi bi-stars text-warning me-2"></i>Highlights of the Month</h2>
        <a asp-action="AllEvents" class="btn btn-outline-glass btn-sm">View All Events</a>
    </div>

    <div class="row g-4">
        @foreach (var item in upcomingEvents)
        {
            <div class="col-md-3">
                <div class="card h-100 glass-card border-0 text-white">

                    <div style="position: relative; overflow: hidden;">
                        <img src="@item.ImageUrl" class="card-img-top" style="height: 250px; object-fit: cover;" alt="@item.Title">
                        <div class="position-absolute top-0 end-0 m-2">
                            <span class="badge bg-primary shadow-sm">@item.Category?.Name</span>
                        </div>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate fw-bold mb-3">@item.Title</h5>

                        <div class="mt-auto">
                            <p class="card-text text-white-50 small mb-1">
                                <i class="bi bi-calendar me-2 text-info"></i> @item.EventDate.ToString("MMM dd, yyyy")
                            </p>
                            <p class="card-text text-white-50 small text-truncate mb-3">
                                <i class="bi bi-geo-alt me-2 text-danger"></i> @item.Location
                            </p>

                            <a asp-controller="Home" asp-action="EventDetails" asp-route-id="@item.EventId" class="btn btn-outline-glass w-100 btn-sm">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>